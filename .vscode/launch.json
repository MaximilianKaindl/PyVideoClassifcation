{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FFMPEG Classify Video",
            "type": "debugpy",
            "request": "launch",
            "program": "src/run_ffmpeg_classify.py",
            "console": "integratedTerminal",
            "args": [
                "--ffmpeg", "./ffmpeg_tools/ffmpeg",
                "--input", "resources/cartoon.mp4",
                "--model", "resources/models/openclip-vit-l-14.pt",
                "--tokenizer", "resources/tokenizer.json", 
                "--labels", "resources/labels.txt"
            ]
        },
        {
            "name": "PYTHON Classify Video",
            "type": "debugpy",
            "request": "launch",
            "program": "src/run_py_classify.py",
            "console": "integratedTerminal",
            "args": [
                "resources/cartoon.mp4"
            ]
        },
        {
            "name": "Convert ViT-B-32",
            "type": "debugpy",
            "request": "launch",
            "program": "src/converters/clip_to_pt.py",
            "console": "integratedTerminal",
            "args": [
                "ViT-B-32",
                "datacomp_xl_s13b_b90k",
                "resources/models/openclip-vit-b-32.pt",
                "resources/input.jpg"
            ]
        },
        {
            "name": "Convert ViT-L-14",
            "type": "debugpy",
            "request": "launch",
            "program": "src/converters/clip_to_pt.py",
            "console": "integratedTerminal",
            "args": [
                "ViT-L-14",
                "datacomp_xl_s13b_b90k",
                "resources/models/openclip-vit-l-14.pt",
                "resources/input.jpg"
            ]
        }
    ]
}